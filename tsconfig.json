{
  "compilerOptions": {
    "target": "ES2018", // ~node10
    "module": "commonjs",
    "moduleResolution": "Node",
    "lib": ["es2015", "es2016", "es2017", "es2018"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "allowJs": false,
    "removeComments": true
  },
  "compileOnSave": true,
  "include": ["src/"],
  "exclude": ["**/*.spec.ts"]
}
